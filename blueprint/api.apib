  + expires_in: 7200 (number, required)
  + refresh_token: `f160d958cab936626305062dc594c2cadb12712ebc7cbca091a27ec4921b91d8` (string, required)
  + created_at: 1468283904 (number, required)
  + user_id: 1 (number, required)

